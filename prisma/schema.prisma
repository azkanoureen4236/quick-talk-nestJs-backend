generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int           @id @default(autoincrement())
  name             String
  email            String        @unique
  password         String
   messagesSent     ChatMessage[] @relation("UserMessagesSent")
  messagesReceived ChatMessage[] @relation("UserMessagesReceived")
}

model ChatMessage {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())

  senderId   Int
  receiverId Int

  sender   User @relation("UserMessagesSent", fields: [senderId], references: [id])
  receiver User @relation("UserMessagesReceived", fields: [receiverId], references: [id])
}
